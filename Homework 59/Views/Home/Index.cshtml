@using Homework_59.CL;
@model IEnumerable<Images>

<div class="container" style="margin-top:40px">

    <h1 style="text-align:center">My Pictures</h1>

    @foreach (Images i in Model)
    {
        <div class="col-md-4" style="text-align:center" id="picture-div" data-id="@i.Id">
            <h4 style="position:absolute; top:15%; left:54%; transform:translate(-50%, -50%); text-align:center; color:black; font-weight:bolder; font-family:'Arial Rounded MT'">@i.Title</h4>
            <a href="/Home/ViewSingle?id=@i.Id">
                <img src="~/UploadedImages/@i.FileName" width="325" style="margin-top:20px; margin-bottom:20px; margin-right:20px; margin-left:20px" id="img-@i.Id" data-id="@i.Id">
            </a>
            <h3 style="visibility:hidden; color:white; font-family:'Arial Rounded MT'; text-align:center;position:absolute;top:40%;left:54%" id="like-count-@i.Id">@i.LikeCount</h3>
            <span class="glyphicon glyphicon-heart" style="visibility:hidden; color:white;font-size:x-large;position:absolute; top:47%;right:48%;" id="like-@i.Id"></span>
        </div>
    }

</div>

@section scripts{
    <script src="~/Scripts/Index.js"></script>
}
